  /*
  * array unique_rand( int $min, int $max, int $num )
  * ç”Ÿæˆä¸€å®šæ•°é‡çš„ä¸é‡å¤éšæœºæ•°
  * $min å’?$max: æŒ‡å®šéšæœºæ•°çš„èŒƒå›´
  * $num: æŒ‡å®šç”Ÿæˆæ•°é‡
  */
  public function unique_rand($max, $num = 1, $min = 1)
  {
      $count = 0;
      $return = array();
      while ($count < $num) {
          $return[] = mt_rand($min, $max);
          $return = array_flip(array_flip($return));
          $count = count($return);
      }
      shuffle($return);

      return $return;
  }
